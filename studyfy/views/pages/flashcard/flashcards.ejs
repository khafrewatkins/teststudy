<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FlashCard Project</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="flashcard.css" />
  </head>
  <body>
    <nav>
      <ul>
        <!-- <li><a href="../../public/flashcard-app-main/index.html">Flashcards</a></li> -->
        <li><a href="../calendar/calendars.ejs" class= "external">Calendar</a></li>
        <li><a href="../index.ejs " class= "external">Text Reader</a></li>
        <li><a href="#">About</a></li>
      </ul>
    </nav>
    <div class="row px-2 mt-4" id="questions-list">

    </div>
    <div class="container">
      <div class="co-6 mt-4">
        <h3>FlashCards</h3> 
        <button class="btn btn-outline-warning mt-2" id="show_question">
          Add Question
        </button>
      </div>
      <div>
        <div id="Feedback"></div>
        <div
          class="form-group col-11 col-lg-6 my-3 mt-4 border border-warning p-3 rounded"
          id="show_div"
        >
          <a href="#" class="close-btn m-0 float-right text-danger" id="close">
            <i class="fas fa-window-close fa-2x"></i>
          </a>
          <label><h5>Question</h5></label>
          <textarea class="form-control" id="Textarea1" rows="3"></textarea>
          <label class="mt-3"><h5>Answer</h5></label>
          <textarea class="form-control" id="Textarea2" rows="3"></textarea>
          <button class="btn btn-outline-success mt-3 btn-block" id="save">
            Save
          </button>
        </div>
       
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/01eab78c02.js"
      crossorigin="anonymous"
    ></script>
    <script src="flashcard.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
  </body>
</html>
